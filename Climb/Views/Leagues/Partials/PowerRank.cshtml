@using Climb.Services
@using Microsoft.AspNetCore.Mvc.Rendering
@model LeagueUser
	
@inject ICdnService CDNService
@inject ILeagueUserService LeagueUserService

<div class="panel">
	<span>@Model.Rank (@Model.Elo) @Html.Partial("/Views/LeagueUsers/Partials/RankTrend.cshtml", Model.GetRankTrend())</span>
	<img src="@CDNService.GetProfilePic(Model)" width="100" height="100"/>
	@Html.Partial("../Users/Partials/Name", Model.User)
	@{
		var character = await LeagueUserService.GetFavoriteCharacter(Model.ID);
	}
	@if (character != null)
	{
		<img src="@CDNService.GetCharacterPic(character)" width="25"/>
	}
</div>