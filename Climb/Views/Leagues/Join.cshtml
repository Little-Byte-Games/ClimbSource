@using Climb.ViewModels
@model LeagueJoinViewModel
@{
	ViewData["Title"] = "Join";
}
<h2>Join</h2>
<h3>@Model.league.Name</h3>

<h5>Members</h5>
<ul>
	@foreach(var user in Model.members)
	{
		<li>
			@user.User.Username
			<form asp-action="Leave" method="post">
				<input type="hidden" name="leagueID" value="@Model.league.ID" />
				<input type="hidden" name="userID" value="@user.User.ID" />
				<input type="submit" value="Leave" />
			</form>
		</li>
	}
</ul>

<h5>Non-Members</h5>
<ul>
	@foreach(var user in Model.potentialMembers)
	{
		<li>
			@user.Username
			<form asp-action="Join" method="post">
				<input type="hidden" name="leagueID" value="@Model.league.ID"/>
				<input type="hidden" name="userID" value="@user.ID"/>
				<input type="submit" value="Join"/>
			</form>
		</li>
	}
</ul>