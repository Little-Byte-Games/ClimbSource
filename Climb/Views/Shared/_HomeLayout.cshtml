@using Climb.ViewModels
@model BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Climb</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/logo/logo-16x16.png">

    <link href="/css/home_layout.css" type="text/css" rel="stylesheet" />
    <link href="/css/set/info.css" type="text/css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>

<body>
@Html.Partial("~/Views/Shared/Navbar.cshtml", Model)

<div class="body-container">
    <div class="body-banner">
        @RenderSection("Body_Banner")
    </div>
    <div class="body-content">
        <div class="content-column">
            @RenderSection("User_Content_Left")
        </div>
        <div class="content-column">
            @RenderSection("User_Content_Middle")
        </div>
        <div class="content-column">
            @RenderSection("User_Content_Right")
        </div>
    </div>
</div>

@Html.Partial("~/Views/Shared/Footer.cshtml")

@{await Html.RenderPartialAsync("~/Views/Shared/Common.cshtml");}
@RenderSection("Scripts", required: false)
</body>
</html>