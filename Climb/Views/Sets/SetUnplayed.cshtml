@model Set

<div class="panel panel-default">
	<div align="center">
		<h5>@Model.Season.League.Name | @Model.Season.DisplayName</h5>
		<span>@Model.Player1Name v @Model.Player2Name</span>
		<br/>
		
		@if(Model.IsComplete)
		{
			<span>@Model.Player1Score - @Model.Player2Score</span>
			<br/>
			<a asp-controller="Sets" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-info" role="button">Details</a>
		}
		else
		{
			<span>@Model.DueDate.ToShortDateString()</span>
			<br />
			<a asp-controller="Sets" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-primary" role="button">Fight!</a>
		}

	</div>
</div>
