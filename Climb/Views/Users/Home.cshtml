@using Climb.ViewModels
@model CompeteHomeViewModel

@{
    ViewBag.Title = Model.homeUser.Username;
    Layout = "_Layout";
}

<link href="/css/user/home.css" type="text/css" rel="stylesheet"/>

<div class="body-container">
    <div class="user-header">
        <img class="user-header-image" src="https://goo.gl/YXRMeV" />
        <img class="profile-image" src="https://goo.gl/TytbTk" />
    </div>
    <div class="user-content">
        <div class="user-column">
            <h3>Leagues</h3>
            <div>
                <div class="league-user">
                    <div class="league-user-info">
                        <img class="league-user-profile-image" src="https://goo.gl/TytbTk" />
                        <span class="league-user-username">MMFane</span>
                        <span class="league-user-league-name">(Seattle Smash)</span>
                    </div>
                    <div class="league-user-rank">
                        <span class="league-user-rank-number">13</span>
                        <span class="league-user-rank-trend">↓</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="user-column">
            <h3>Activity</h3>
        </div>
        <div class="user-column">
            <h3>Sets</h3>
        </div>
    </div>
</div>

