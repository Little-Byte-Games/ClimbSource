@model Climb.Controllers.SetMatch

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h3>@Model.set.Player1.User.Username v @Model.set.Player2.User.Username</h3>
<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
	        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="match.Player1Score" class="control-label"></label>
                <input asp-for="match.Player1Score" class="form-control" />
                <span asp-validation-for="match.Player1Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="match.Player2Score" class="control-label"></label>
                <input asp-for="match.Player2Score" class="form-control" />
                <span asp-validation-for="match.Player2Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
	<a asp-action="Index">Done</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
