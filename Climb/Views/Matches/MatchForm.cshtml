@model Match

<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ID"/>
			<div class="form-group">
				<label asp-for="Player1Score" class="control-label"></label>
				<input asp-for="Player1Score" class="form-control"/>
				<span asp-validation-for="Player1Score" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Player2Score" class="control-label"></label>
				<input asp-for="Player2Score" class="form-control"/>
				<span asp-validation-for="Player2Score" class="text-danger"></span>
			</div>
		</form>
	</div>
</div>
